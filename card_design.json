{
  "designSystem": {
    "name": "Discussion Card Design System",
    "version": "1.0",
    "overview": "A modern card-based interface for discussion threads with emphasis on engagement metrics and content hierarchy",
    
    "colorPalette": {
      "primary": {
        "deep_purple": "#4A148C",
        "medium_purple": "#6A1B9A",
        "description": "Used for backgrounds and primary interactive elements"
      },
      "secondary": {
        "soft_purple": "#B39DDB",
        "light_purple_gradient": "linear-gradient(135deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1))",
        "description": "Used for card backgrounds with subtle gradients"
      },
      "accents": {
        "rose_pink": "#C084A1",
        "description": "Used for engagement indicators and badges"
      },
      "neutral": {
        "dark_text": "#1A1A2E",
        "medium_text": "#6B6B8D",
        "white": "#FFFFFF"
      }
    },

    "typography": {
      "heading": {
        "fontSize": "22-26px",
        "fontWeight": "600-700",
        "lineHeight": "1.3",
        "color": "dark_text",
        "description": "Main discussion title"
      },
      "metadata": {
        "fontSize": "13-14px",
        "fontWeight": "400-500",
        "color": "medium_text",
        "description": "Author name, date, and category tags"
      },
      "bulletSeparator": "â€¢",
      "metadataSpacing": "inline with bullets between items"
    },

    "layout": {
      "cardStructure": {
        "containerType": "rounded rectangle",
        "borderRadius": "24-32px",
        "padding": {
          "horizontal": "24-32px",
          "vertical": "28-36px"
        },
        "background": "gradient overlay on primary color",
        "shadow": "soft, subtle elevation",
        "maxWidth": "responsive, typically 90-95% of container"
      },
      
      "contentHierarchy": [
        {
          "element": "title",
          "position": "top",
          "spacing": "16-20px below metadata"
        },
        {
          "element": "metadata_row",
          "position": "below title",
          "layout": "horizontal flex",
          "items": ["author", "date", "category"],
          "spacing": "8-12px between items"
        },
        {
          "element": "action_bar",
          "position": "bottom",
          "layout": "horizontal flex with space-between",
          "leftSide": "action buttons",
          "rightSide": "engagement indicators"
        }
      ],

      "spacing": {
        "betweenSections": "20-24px",
        "betweenMetadataItems": "8-12px",
        "betweenActionButtons": "12-16px"
      }
    },

    "components": {
      "actionButtons": {
        "type": "circular icon buttons",
        "size": "48-56px diameter",
        "background": "semi-transparent white/purple",
        "iconSize": "20-24px",
        "hoverState": "slightly darker background",
        "variants": [
          {
            "type": "primary",
            "background": "solid dark purple",
            "icon": "chevron right / arrow",
            "purpose": "navigate to discussion"
          },
          {
            "type": "secondary",
            "background": "light translucent purple",
            "icons": ["edit", "delete", "options"],
            "purpose": "content actions"
          }
        ]
      },

      "engagementIndicator": {
        "type": "badge with avatar stack",
        "layout": {
          "badge": {
            "shape": "circular or rounded rectangle",
            "background": "rose_pink with opacity",
            "textColor": "white",
            "fontSize": "13-15px",
            "fontWeight": "600",
            "prefix": "+",
            "content": "engagement count"
          },
          "avatarStack": {
            "layout": "overlapping circles",
            "size": "36-44px diameter per avatar",
            "overlap": "30-40% of diameter",
            "border": "2px white border on each avatar",
            "maxVisible": "3-4 avatars",
            "order": "left to right, newest on top"
          }
        },
        "positioning": "right side of action bar"
      },

      "categoryTag": {
        "display": "inline text",
        "color": "medium_text or accent color",
        "fontSize": "13-14px",
        "fontWeight": "500",
        "decoration": "none or subtle underline on hover"
      }
    },

    "interactionStates": {
      "card": {
        "default": "subtle gradient background",
        "hover": "slight scale (1.02) or shadow increase",
        "pressed": "slight scale (0.98)",
        "transition": "0.2-0.3s ease"
      },
      "buttons": {
        "default": "base background color",
        "hover": "background darkens 10-15%",
        "pressed": "background darkens 20-25%",
        "transition": "0.15-0.2s ease"
      }
    },

    "visualEffects": {
      "gradients": {
        "cardBackground": "diagonal gradient (135deg) from top-left to bottom-right",
        "overlays": "subtle white overlay at 10-30% opacity"
      },
      "shadows": {
        "card": "0px 4px 20px rgba(0, 0, 0, 0.08)",
        "buttons": "0px 2px 8px rgba(0, 0, 0, 0.1)"
      },
      "borderRadius": {
        "cards": "24-32px",
        "buttons": "50% (circular) or 12-16px (rounded)",
        "avatars": "50% (circular)"
      }
    },

    "responsiveGuidelines": {
      "mobile": {
        "cardPadding": "20-24px",
        "fontSize": {
          "title": "20-22px",
          "metadata": "12-13px"
        },
        "buttonSize": "44-48px",
        "avatarSize": "32-36px"
      },
      "tablet": {
        "cardPadding": "24-28px",
        "fontSize": {
          "title": "22-24px",
          "metadata": "13-14px"
        },
        "buttonSize": "48-52px",
        "avatarSize": "36-40px"
      },
      "desktop": {
        "cardPadding": "28-32px",
        "fontSize": {
          "title": "24-26px",
          "metadata": "14px"
        },
        "buttonSize": "52-56px",
        "avatarSize": "40-44px"
      }
    },

    "accessibilityConsiderations": {
      "contrast": "Ensure 4.5:1 minimum for text",
      "touchTargets": "Minimum 44x44px for all interactive elements",
      "focusStates": "Visible focus rings on keyboard navigation",
      "semanticHTML": "Use proper heading hierarchy and ARIA labels",
      "altText": "All avatars should have descriptive alt attributes"
    },

    "implementationNotes": {
      "framework": "Works with React, Vue, or vanilla CSS",
      "animations": "Use CSS transforms for performance (transform, opacity)",
      "imageLoading": "Lazy load avatars, use skeleton states",
      "dataStructure": {
        "title": "string",
        "author": "string",
        "date": "ISO date string",
        "category": "string",
        "engagementCount": "number",
        "participantAvatars": "array of image URLs",
        "actions": "array of available user actions"
      }
    }
  }
}